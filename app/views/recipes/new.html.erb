<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規レシピ投稿</h2>
       
       
  <%= form_with(model: @recipe, url: recipes_path, local: true) do |f| %>

       
    <div class="field">
      <%= f.label :name, "タグ" %><br />
      <%= f.text_field :name %>
    </div>

  <div class="field">
    <%= f.label :title, "料理名" %><br />
    <%= f.text_field :title %>
  </div>

<div class="field">
    <%= f.label :image, "プロトタイプの画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :text, "レシピ" %><br />
    <%= f.text_field :text %>
  </div>

  <div class="field">
   <%= f.label :process, "材料" %><br />
    <%= f.text_area :process, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :material, "作り方" %><br />
    <%= f.text_area :material, class: :form__text %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>


    </div>
  </div>
</div>